@model VMCabania;
@{
    ViewData["Title"] = "Agregar Cabaña";
}

<section class="vh-70 gradient-custom">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-primary bg-gradient text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4">
                            <form asp-action="Create" enctype="multipart/form-data">

                                <h3 class="fw-bold mb-2">Agregar Cabaña</h3>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Cabania.Nombre" type="text" class="form-control form-control-lg" />
                                    <label asp-for="Cabania.Nombre" class="form-label">Nombre</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Cabania.Descripcion" type="text" class="form-control form-control-lg" />
                                    <label asp-for="Cabania.Descripcion" class="form-label">Descripcion</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label asp-for="Tipos" class="control-label">Tipo de Cabaña</label>
                                    <select name="Id">
                                        @foreach (var item in Model.Tipos)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                </div>


                                <div class="form-outline form-white mb-4">
                                    <label asp-for="TieneJacuzzi" class="control-label">Tiene Jacuzzi</label>
                                    <select name="TieneJacuzzi">
                                        <option value="0">No</option>
                                        <option value="1">Si</option>
                                    </select>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label asp-for="HabilitadaReservas" class="control-label">Habilitada Reservas</label>
                                    <select name="HabilitadaReservas">
                                        <option value="0">No</option>
                                        <option value="1">Si</option>
                                    </select>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label asp-for="Foto" class="control-label">Foto</label>
                                    <input asp-for="Foto" class="form-control form-control-lg" />
                                </div>

                                <input type="submit" value="Agregar" class="btn btn-outline-light btn-lg px-5" />

                            </form>
                            <h5 class="text-warning mt-5 fw-bold">@ViewBag.Error</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@ViewBag.Mensaje

