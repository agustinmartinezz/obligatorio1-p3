@model HotelCabañas.Models.VMLogin
@{
    ViewData["Title"] = "Registrarse";
}

<section class="vh-70 gradient-custom">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-primary bg-gradient text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4">
                            <form asp-action="Register">
                                @Html.AntiForgeryToken()
                                <h2 class="fw-bold mb-2 text-uppercase">Registrarse</h2>
                                <p class="text-white-50 mb-5">Ingrese sus datos!</p>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Nombre" type="name" class="form-control form-control-lg" />
                                    <label asp-for="Nombre" class="form-label">Nombre</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Mail" type="email" class="form-control form-control-lg" />
                                    <label asp-for="Mail" class="form-label">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Contrasenia" type="password" class="form-control form-control-lg" />
                                    <label asp-for="Contrasenia" class="form-label">Contraseña</label>
                                </div>

                                <input type="submit" value="Registrarse" class="btn btn-outline-light btn-lg px-5" />

                            </form>
                            <h5 class="text-warning mt-5 fw-bold">@ViewBag.Error</h5>
                        </div>

                        <div>
                            <p class="mb-0">
                                Ya tiene cuenta? <a asp-action="Login" class="text-white-50 fw-bold">Ingresar</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>